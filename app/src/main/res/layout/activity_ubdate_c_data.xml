<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registergradient"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ubdate_cData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@color/profileheader"
            android:fontFamily="@font/qhyts"
            android:text="Update Company "
            android:textAlignment="center"
            android:textColor="@color/mapBoxWhite"
            android:textSize="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:fontFamily="monospace"
            android:text="Company Name"
            android:textColor="@color/mapBoxWhite"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/buttonshapexx"
            android:tint="@color/btntext"
            app:srcCompat="@android:drawable/ic_menu_rotate" />


    </LinearLayout>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btntext"
        android:padding="25dp" />


    <EditText
        android:id="@+id/Oname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittexstyle"
        android:ems="10"
        android:fontFamily="@font/futuralightbt"
        android:hint="Owner name"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@color/mapBoxWhite" />


    <EditText
        android:id="@+id/Adresss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittexstyle"
        android:ems="10"
        android:fontFamily="@font/futuralightbt"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@android:color/white"

        android:textColorHint="@color/mapBoxWhite" />


    <EditText
        android:id="@+id/Phon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittexstyle"
        android:ems="10"
        android:fontFamily="@font/futuralightbt"
        android:hint="Phone number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@color/mapBoxWhite" />

    <EditText
        android:id="@+id/Mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittexstyle"
        android:ems="10"
        android:fontFamily="@font/futuralightbt"
        android:hint="Mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@color/mapBoxWhite" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/buttonshapexx"
        android:fontFamily="@font/futuralightbt"
        android:text="SAve"
        android:textColor="@color/btntext"
        android:textSize="35dp" />


</LinearLayout>