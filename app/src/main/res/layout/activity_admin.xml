<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registergradient"
    tools:context=".adminActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@color/profileheader"
            android:fontFamily="@font/qhyts"
            android:text="Add Company"
            android:textAlignment="center"
            android:textColor="@color/btntext"
            android:textSize="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="0dp">



        <Button
            android:id="@+id/copounBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshapexx"
            android:textColor="@color/btntext"

            android:fontFamily="@font/futuralightbt"
            android:text="Coupon Management"
            android:textSize="25dp" />

        <Button
            android:id="@+id/addSponCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshapexx"
            android:textColor="@color/btntext"

            android:fontFamily="@font/futuralightbt"
            android:text="Add Sponsor Company"
            android:textSize="25dp" />

        <Button
            android:id="@+id/delSponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshapexx"
            android:textColor="@color/btntext"

            android:fontFamily="@font/futuralightbt"
            android:text="Delete Sponsor"
            android:textSize="25dp" />

        <Button
            android:id="@+id/updateSpon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshapexx"
            android:textColor="@color/btntext"

            android:fontFamily="@font/futuralightbt"
            android:text="Update Sponsor Data"
            android:textSize="25dp" />
        <Button
            android:id="@+id/viewSponsors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshapexx"
            android:textColor="@color/btntext"

            android:fontFamily="@font/futuralightbt"
            android:text="View Sponsors"
            android:textSize="25dp" />
        <Button
            android:id="@+id/viewUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshapexx"
            android:textColor="@color/btntext"

            android:fontFamily="@font/futuralightbt"
            android:text="View Users"
            android:textSize="25dp" />
        <Button
            android:id="@+id/signoutadmin"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshapexx2"
            android:textColor="@color/mapBoxWhite"

            android:fontFamily="@font/futuralightbt"
            android:text="signout"
            android:textSize="25dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>